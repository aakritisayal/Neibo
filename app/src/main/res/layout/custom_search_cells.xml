<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearCels"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1.9"
            android:weightSum="5"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.9"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo_img"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/find_facebook"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/txt1"
                    style="@style/font_roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="gggggggggg"
                    android:maxLines="2"
                    android:textColor="@color/pink_dark"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt2"
                    style="@style/font_roboto_regular_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#808285"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/txt3"
                    style="@style/font_roboto_regular_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="gggggggggg"
                    android:textColor="#808285"
                    android:textSize="12sp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2.1"
                android:gravity="center_horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt4"
                    style="@style/font_roboto_regular_txt"
                    android:layout_width="wrap_content"
                    android:text="_._"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/background_dark_pink"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3.1">

            <TextView
                android:id="@+id/txt5"
                style="@style/font_roboto_regular_txt"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:maxLines="3"
                android:textColor="#000000"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/light_grey"
        android:layout_height="0.5dp"/>


</LinearLayout>
