<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:id="@+id/relative1"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative2"
        android:background="@color/pink_dark"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/imgcancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@drawable/cross"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="70dp"
        android:src="@drawable/round_grey"
        android:layout_height="70dp"
        android:layout_marginStart="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <ImageView
        android:id="@+id/img_follow"
        android:layout_width="50dp"
        android:src="@drawable/select_friend"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/relative2"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_below="@+id/img_follow"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content">

        <TextView
            style="@style/font_roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Friends Name"
            android:textColor="#808285"
            android:textSize="16dp" />

        <TextView
            style="@style/font_roboto_regular_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="\@username         location"
            android:textColor="#808285"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:background="#666666"
            android:layout_marginTop="12dp"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:id="@+id/add_friends"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_height="30dp">

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/round_grey"
                android:layout_height="40dp"
                android:id="@+id/imageView3" />

            <TextView
                style="@style/font_roboto_regular_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Followed by another friend"
                android:layout_marginLeft="10dp"
                android:textColor="#808285"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView3" />

            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/next_grey"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="40dp"
    android:background="#FF1B3F"
    android:gravity="center"
    android:layout_height="40dp">

    <ImageView
        android:layout_width="25dp"
        android:src="@drawable/friends"
        android:layout_height="25dp" />

    <TextView
        style="@style/font_roboto_regular_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Chat with this friend"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="16sp" />



</LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="20dp" />


    </LinearLayout>


</RelativeLayout>

</LinearLayout>
