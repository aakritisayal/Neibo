<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    android:weightSum="5">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F2F2F2">

            <ImageView
                android:id="@+id/imgcancel"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="12dp"
                android:src="@drawable/cancel_grey" />


            <TextView
                style="@style/font_roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Create Deck"
                android:textColor="#808285"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/txtSave"
                style="@style/font_roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:text="Save"
                android:textColor="#808285"
                android:textSize="18dp" />


        </RelativeLayout>

        <!--<ImageView-->
        <!--android:layout_width="70dp"-->
        <!--android:src="@drawable/round_grey"-->
        <!--android:layout_height="70dp"-->
        <!--android:layout_marginStart="31dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginTop="44dp" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative2"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/font_roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Title"
                android:textColor="#808285"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edtDeckTitle"
                style="@style/font_roboto_regular_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@android:color/transparent"
                android:paddingLeft="20dp"
                android:maxLength="25"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:text=""
                android:hint="Deck heading"
                android:textColor="#808285"
                android:textColorHint="@color/light_grey"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#BCBEC0"></View>


            <TextView
                style="@style/font_roboto_medium"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Description"
                android:textColor="#808285"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edtDeckDes"
                style="@style/font_roboto_regular_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="Add more details about your deck"
                android:lines="3"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text=""
                android:textColor="#808285"
                android:textColorHint="@color/light_grey"
                android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@drawable/lock_img" />


                <TextView
                    style="@style/font_roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imageView4"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:text="Make deck private"
                    android:textColor="#808285"
                    android:textSize="16dp" />


                <ToggleButton
                   android:id="@+id/toggleprivacy"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/toggle_button"
                    android:checked="false"
                    android:gravity="center|right"
                    android:textOff=""
                    android:textOn="">

                </ToggleButton>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#ffffff" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
