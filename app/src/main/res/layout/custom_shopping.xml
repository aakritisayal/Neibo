<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/light_grey"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/iDdealClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_shpng_icon"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#F7F7F7"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/txtBrand"
                    style="@style/font_roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="United Colors Of Beneton"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPrice"
                        style="@style/font_roboto_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="50000 THB"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtActualPrice"
                            style="@style/font_roboto_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 50000 THB"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/vierCancel"
                            android:layout_width="wrap_content"
                            android:background="@color/black"

                            android:layout_height="0.2dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignEnd="@+id/txtActualPrice" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtDscntprcnt"
                        style="@style/font_roboto_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(-50%)"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/pink_dark"
                        android:textSize="14sp" />



                </LinearLayout>




                <TextView
                    android:id="@+id/txtItmDesc"
                    style="@style/font_roboto_regular_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="United Colors Of Beneton"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>


