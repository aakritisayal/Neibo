                android:layout_height="30dp" />

            <TextView
                style="@style/font_roboto_regular_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Friend's name followed 3 people"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>

<LinearLayout
    android:id="@+id/lnrFollowCell"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">


</LinearLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/pink_light"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="0.5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/round_grey"
                android:layout_height="30dp" />

            <TextView
                style="@style/font_roboto_regular_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Friend's added restrauant to deck name"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrFollowCell1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


        </LinearLayout>



    </LinearLayout>

</ScrollView>
